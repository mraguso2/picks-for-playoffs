extends layout

block content
  .inner__home
    .landing
      if user
        .returning
          .welcome
            p.welcome__greet Welcome, #{user.firstName}!
            a.welcome__bracket(href="/bracket/2018") Go to your Bracket â†’
      .header__section--text
        h5.math 32 Total NFL Teams
          br
          | 12 Make the Playoffs
        p.sarcasm #[em We Did The Math]
        .explaination
          h5.explaination__title 20 teams watch the playoffs from home
          p.explaination__content Meaning 20 team's fans watch #[em other] teams fight for the Vince Lombardi Trophy.
            br
            span Some fans more often than others...(you know who you are)
  if !user
    .section
      p.section__text Sign up and enjoy the playoffs whether your team made it or not
      .section__buttons
        a.button.landingAction.landingAction__register(href="/register") Register
        a.button.landingAction.landingAction__login(href="/login") Login
    .practiceSection
      h3.practiceSection__title Run Through a Practice Bracket Today
      a.button.landingAction.landingAction__fakebracket(href="/fakebracket/wildcard") Try It Now!
