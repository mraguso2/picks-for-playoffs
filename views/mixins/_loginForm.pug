mixin loginForm()
  form.form.dbLimit(action="/login" method="POST")
    h2 Login
    div.inner__form--container
      label(for="email") Email
      input(type="email" id="email" name="email" required)
      label(for="password") Password
      input(type="password" id="password" name="password" required)
      a.loginToggleForgot(href="/forgot") Forgot My Password
      input.button(type="submit" id="login" value="Log in âž”")